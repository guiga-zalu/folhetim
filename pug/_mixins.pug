mixin card(titulo, texto, textao, img, tipo)
	unless tipo
		tipo = .small
	.card(class = [tipo])
		.card-image.waves-effect.waves-block.waves-light
			img.activator(src = img)
		.card-content
			span.card-title.activator.grey-text.text-darken-4= titulo
				i.material-icons.right more_vert
			p: a= texto
		.card-reveal
			span.card-title.grey-text.text-darken-4= titulo
				i.material-icons.right close
			p= textao